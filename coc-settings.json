{
  "suggest": {
    "triggerAfterInsertEnter": true,
    "echodocSupport": true,
    "snippetIndicator": "",
    "invalidInsertCharacters": "\n\r"
  },
  "diagnostic": {
    "errorSign": "‚úó",
    "infoSign": "‚Ñπ",
    "hintSign": "Ôêû",
    "format": "%source%code: %message"
  },
  "session": {
    "directory": "~/.local/share/nvim/session",
    "saveOnVimLeave": false
  },
  "list": {
    "source": {
      "files": {
        "args": ["--hidden", "--files"]
      },
      "bibtex": {
        "files": ["*.bib", "refs/*.bib"],
        "citation": {
          "after": "}",
          "before": "\\cite{"
        }
      }
    },
    "insertMappings": {
      "<C-J>": "prompt:next",
      "<C-K>": "prompt:previous",
      "<A-k>": "prompt:removetail",
      "<C-F>": "prompt:right",
      "<C-B>": "prompt:left",
      "<C-D>": "prompt:deletebackward",
      "<C-Y>": "prompt:paste",
      "<A-p>": "prompt:previous",
      "<A-n>": "prompt:next",
      "<A-a>": "normal:gg",
      "<A-e>": "normal:G",
      "<A-v>": "feedkeys:<PageUp>",
      "<C-V>": "feedkeys:<PageDown>",
      "<A-g>": "do:selectall",
      "<C-X>": "do:previewtoggle",
      "<C-P>": "do:previous",
      "<C-N>": "do:next",
      "<C-G>": "do:toggle",
      "<C-Q>": "do:help"
    },
    "normalMappings": {
      "u": "feedkeys:<PageUp>",
      "d": "feedkeys:<PageDown>",
      "t": "feedkeys:t",
      "<Space>": "feedkeys:<Space>",
      "?": "feedkeys:?",
      "o": "do:toggle",
      "x": "action:delete"
    }
  },
  "coc": {
    "preferences": {
      "snippetStatusText": "",
      "enableMarkdown": true
    },
    "source": {
      "emoji": {
        "shortcut": "üòÄ"
      }
    }
  },

  "highlight": {
    "colors": {
      "enable": true
    },
    "document": {
      "enable": true
    }
  },

  "pydocstring": {
    "enableFileAction": true
  },

  "diagnostic-languageserver": {
    "filetypes": {
      "latex": "lacheck",
      "text": "alex-text",
      "html": "alex-html",
      "vim": "vint",
      "markdown": ["write-good", "markdownlint", "alex"],
      "mail": "languagetool",
      "sh": "shellcheck",
      "elixir": ["mix_credo", "mix_credo_compile"],
      "php": ["phpstan", "psalm"],
      "yaml": ["yamllint"],
      "cmake": ["cmake-lint", "cmakelint"],
      "systemd": "systemd-analyze"
    },
    "formatFiletypes": {
      "dart": "dartfmt",
      "elixir": "mix_format",
      "lua": "lua-format",
      "sh": "shfmt",
      "blade": "blade-formatter",
      "cmake": "cmake-format"
    }
  },

  "cSpell": {
    "allowCompoundWords": true
  },

  "prettier": {
    "ignorePath": ".gitignore"
  },

  "tasks": {
    "shortcut": "!"
  },

  "snippets": {
    "shortcut": "‚ñ∂",
    "userSnippetsDirectory": "~/.config/nvim/ultisnips"
  },

  "translator": {
    "engines": ["bing", "youdao", "haici"]
  },

  "git": {
    "showCommitInFloating": true,
    "virtualTextPrefix": "",
    "gitlab": {
      "hosts": ["gitlab.com", "gitee.com"]
    }
  },

  "dash-complete": {
    "shortcut": "-"
  },

  "dot-complete": {
    "shortcut": "."
  },

  "just-complete": {
    "shortcut": "_"
  },

  "tabnine": {
    "shortcut": "Ôêû"
  },

  "yaml": {
    "format": {
      "singleQuote": true
    }
  },

  "html": {
    "autoClosingTags": true
  },

  "clang-format-style-options": {
    "shortcut": "clang"
  },

  "texlab": {
    "build": {
      "isContinuous": true
    },
    "forwardSearch": {
      "executable": "zathura"
    },
    "chktex": {
      "onOpenAndSave": true,
      "onEdit": true
    }
  },

  "python": {
    "formatting": {
      "provider": "black"
    },
    "linting": {
      "pycodestyleEnabled": true,
      "pydocstyleEnabled": true,
      "banditEnabled": true
    }
  },
  "Lua": {
    "hint": {
      "enable": true
    }
  }
}
