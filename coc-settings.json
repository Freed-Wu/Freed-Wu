{
  "suggest": {
    "triggerAfterInsertEnter": true,
    "echodocSupport": true,
    "snippetIndicator": "",
    "invalidInsertCharacters": "(,<,{,[,\r,\n"
  },
  "diagnostic": {
    "errorSign": "‚úó",
    "infoSign": "‚Ñπ",
    "hintSign": "Ôêû",
    "format": "%source%code: %message"
  },
  "session": {
    "directory": "~/.local/share/nvim/session",
    "saveOnVimLeave": false
  },
  "list": {
    "source": {
      "files": {
        "args": ["--hidden", "--files"]
      },
      "bibtex": {
        "files": ["*.bib", "refs/*.bib"],
        "citation": {
          "after": "}",
          "before": "\\cite{"
        }
      }
    },
    "insertMappings": {
      "<A-j>": "prompt:next",
      "<A-k>": "prompt:previous",
      "<C-k>": "prompt:removetail",
      "<C-F>": "prompt:right",
      "<C-B>": "prompt:left",
      "<C-D>": "prompt:deletebackward",
      "<C-Y>": "prompt:paste",
      "<A-a>": "normal:gg",
      "<A-e>": "normal:G",
      "<A-v>": "feedkeys:<PageUp>",
      "<C-V>": "feedkeys:<PageDown>",
      "<A-p>": "do:previewup",
      "<A-n>": "do:previewdown",
      "<C-X>": "do:previewtoggle",
      "<A-g>": "do:selectall",
      "<C-G>": "do:toggle",
      "<C-P>": "do:previous",
      "<C-N>": "do:next",
      "<C-Q>": "do:help"
    },
    "normalMappings": {
      "u": "feedkeys:<PageUp>",
      "d": "feedkeys:<PageDown>",
      "t": "feedkeys:t",
      "<Space>": "feedkeys:<Space>",
      "?": "feedkeys:?",
      "o": "do:toggle",
      "x": "action:delete"
    }
  },
  "coc": {
    "preferences": {
      "snippetStatusText": "",
      "enableMarkdown": true
    },
    "source": {
      "emoji": {
        "shortcut": "üòÄ"
      }
    }
  },

  "highlight": {
    "colors": {
      "enable": true
    },
    "document": {
      "enable": true
    }
  },

  "pydocstring": {
    "enableFileAction": true,
    "doqPath": "/usr/bin/doq"
  },

  "diagnostic-languageserver": {
    "linters": {
      // https://github.com/iamcco/coc-diagnostic/pull/133
      "lacheck": {
        "command": "lacheck",
        "args": ["%file"],
        "debounce": 100,
        "offsetLine": 0,
        "offsetColumn": 0,
        "sourceName": "lacheck",
        "formatLines": 1,
        "formatPattern": [
          "\"[^\"]+\", line (\\d+):\\s*(.*)(\\r|\\n)*$",
          {
            "line": 1,
            "message": 2
          }
        ],
        "securities": {
          "undefined": "warning"
        }
      },
      // https://github.com/iamcco/coc-diagnostic/pull/135
      "pip-compile": {
        "command": "sh",
        "args": ["-c", "pip-compile -n %file 2>&1"],
        "debounce": 100,
        "offsetLine": 0,
        "offsetColumn": 0,
        "sourceName": "pip-compile",
        "formatLines": 1,
        "formatPattern": [
          "(Could not find a version that matches \\S+) \\(from -r ([^(]+) \\(line (\\d+)\\)\\)",
          {
            "message": 1,
            "errorsRoot": 2,
            "line": 3
          }
        ]
      },
      // https://github.com/iamcco/coc-diagnostic/pull/136
      "syntest": {
        "command": "syntest",
        "args": ["%file", "."],
        "debounce": 100,
        "offsetLine": 0,
        "offsetColumn": 0,
        "sourceName": "syntest",
        "formatLines": 1,
        "formatPattern": [
          "Assertion selector \"[^\"]+\" from line (\\d+) failed against line \\d+, column range (\\d+)-(\\d+) \\(with text \"[^\"]+\"\\) has scope \\[([^\\]]+)\\]",
          {
            "line": 1,
            "column": 2,
            "endColumn": 3,
            "message": 4
          }
        ]
      }
    },
    "filetypes": {
      "syntax_test": "syntest",
      "requirements": "pip-compile",
      "latex": "lacheck",
      "text": "alex-text",
      "html": "alex-html",
      "vim": "vint",
      "markdown": ["write-good", "markdownlint", "alex"],
      "sh": "shellcheck",
      "elixir": ["mix_credo", "mix_credo_compile"],
      "php": ["phpstan", "psalm"],
      "yaml": "yamllint",
      "cmake": ["cmake-lint", "cmakelint"],
      "systemd": "systemd-analyze"
    },
    "formatFiletypes": {
      "dart": "dartfmt",
      "elixir": "mix_format",
      "lua": "lua-format",
      "sh": "shfmt",
      "blade": "blade-formatter",
      "cmake": "cmake-format"
    }
  },

  "cSpell": {
    "allowCompoundWords": true
  },

  "prettier": {
    "ignorePath": ".gitignore"
  },

  "tasks": {
    "shortcut": "!"
  },

  "snippets": {
    "shortcut": "‚ñ∂",
    "userSnippetsDirectory": "~/.config/nvim/ultisnips"
  },

  "translator": {
    "enableHover": true
  },

  "git": {
    "showCommitInFloating": true,
    "virtualTextPrefix": "",
    "gitlab": {
      "hosts": ["gitlab.com", "gitee.com"]
    }
  },

  "dash-complete": {
    "shortcut": "-"
  },

  "dot-complete": {
    "shortcut": "."
  },

  "just-complete": {
    "shortcut": "_"
  },

  "tabnine": {
    "shortcut": "Ôêû"
  },

  "yaml": {
    "format": {
      "singleQuote": true
    }
  },

  "html": {
    "autoClosingTags": true
  },

  "clang-format-style-options": {
    "shortcut": "clang"
  },

  "texlab": {
    "build": {
      "isContinuous": true
    },
    "forwardSearch": {
      "executable": "zathura"
    },
    "chktex": {
      "onOpenAndSave": true,
      "onEdit": true
    }
  },

  "python": {
    "formatting": {
      "provider": "black"
    },
    "linting": {
      "pycodestyleEnabled": true,
      "pydocstyleEnabled": true,
      "banditEnabled": true
    }
  },
  "Lua": {
    "hint": {
      "enable": true
    }
  }
}
