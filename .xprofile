# shellcheck shell=bash
# posix
PATH="$HOME/.local/bin:$PATH"
export VISUAL=vi
export EDITOR=$VISUAL
# `gtk-launch $(xdg-mime query default text/html) about:blank` cannot work
export BROWSER=firefox
# man
MANPATH="$HOME/.local/man:$MANPATH"
MANOPT=-Lzh_CN.UTF-8
export MANOPT
MANSECT='1:1p:8:3:3p:0:0p:2:5:4:9:6:7:n:l'
export MANSECT
# perl
export PERL5LIB
PERL5LIB="$HOME/.local/lib/perl5"
# neomutt
EMAIL="$(git config user.email)"
export EMAIL
# debmake
DEBFULLNAME="$(git config user.name)"
export DEBFULLNAME
DEBEMAIL="$EMAIL"
export DEBEMAIL
# rg
RIPGREP_CONFIG_PATH=$HOME/.config/ripgreprc
export RIPGREP_CONFIG_PATH
# kitty
# https://sw.kovidgoyal.net/kitty/glossary/#envvar-GLFW_IM_MODULE
export GLFW_IM_MODULE=ibus
# minicom
export MINICOM='-m -w -8 -c on -C /tmp/minicom.log'
# has
export HAS_ALLOW_UNSAFE=y
# ccache
export USE_CCACHE=1
# gks
export GKS_ENCODING=utf-8
# wine
export WINEDEBUG=-all
# python
export PYTHONSTARTUP=${XDG_CONFIG_HOME:-$HOME/.config}/python/python/__init__.py
export PYTHONBREAKPOINT=pudb.set_trace
# lesspipe
export LESSQUIET=1
# fzf
export FZF_DEFAULT_COMMAND='rg --files --color=always'
# ex: filetype=sh
