#! /usr/bin/env sh
mime=$(file -Lb --mime-type "$1")
category=${mime%%/*}
kind=${mime##*/}
if [ -d "$1" ]; then
  if [ -x "$(which exa)" ]; then
    exa --git -hl --color=always --icons "$1"
  fi
elif [ "$kind" = plain ] && [ "${1##*.}" = tsv ]; then
  if [ -x "$(which xsv)" ]; then
    xsv table -d'\t' "$1"
  fi
elif [ "$kind" = csv ]; then
  if [ -x "$(which bat)" ]; then
    bat -p "$1" --color=always | xsv table | bat -p --color=always
  fi
elif [ "$kind" = json ]; then
  if [ -x "$(which jq)" ]; then
    jq -r . "$1" --color-output
  fi
elif [ "$kind" = pdf ]; then
  if [ -x "$(which pdftotext)" ] && [ -x "$(which sed)" ]; then
    pdftotext "$1" - | sed "s/\f/$(hr â”€)\n/"
  fi
elif [ "$kind" = vnd.openxmlformats-officedocument.spreadsheetml.sheet ] ||
  [ "$kind" = vnd.ms-excel ]; then
  if [ -x "$(which in2csv)" ] && [ -x "$(which xsv)" ] && [ -x "$(which bat)" ]; then
    in2csv "$1" | xsv table | bat -ltsv --color=always
  fi
elif [ "$category" = text ]; then
  if [ -x "$(which bat)" ]; then
    bat --color=always "$1"
  elif [ -x "$(which pygmentize)" ]; then
    pygmentize "$1" | less
  fi
elif [ "$category" = image ]; then
  if [ -x "$(which chafa)" ]; then
    chafa "$1"
  fi
  if [ -x "$(which exiftool)" ]; then
    exiftool "$1"
  fi
elif [ -x "$(which bat)" ]; then
  lesspipe.sh "$1" | bat --color=always
fi
